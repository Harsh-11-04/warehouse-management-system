+import { useState } from 'react'
+import { toast } from 'sonner'
+import { useSearchParams } from 'react-router-dom'
+import { useGetLocationsQuery, useCreateLocationMutation, useDeleteLocationMutation } from '../../provider/queries/Warehouse.query'
+import BredCrums from '../../components/BredCrums'
+import { DataTable } from 'primereact/datatable'
+import { Column } from 'primereact/column'
+import { Dialog } from 'primereact/dialog'
+import { InputText } from 'primereact/inputtext'
+import { Button } from 'primereact/button'
+import { confirmDialog, ConfirmDialog } from 'primereact/confirmdialog'
+
+const LocationsPage = () => {
+    const [searchParams] = useSearchParams()
+    const warehouseId = searchParams.get('warehouseId') || ''
+    const warehouseName = searchParams.get('name') || 'Warehouse'
+
+    const [showDialog, setShowDialog] = useState(false)
+    const [form, setForm] = useState({ rack: '', bin: '' })
+
+    const { data, isLoading } = useGetLocationsQuery(warehouseId, { skip: !warehouseId })
+    const [createLocation, { isLoading: creating }] = useCreateLocationMutation()
+    const [deleteLocation] = useDeleteLocationMutation()
+
+    const handleCreate = async () => {
+        try {
+            const res: any = await createLocation({ warehouseId, ...form }).unwrap()
+            toast.success(res.msg)
+            setShowDialog(false)
+            setForm({ rack: '', bin: '' })
+        } catch (error: any) {
+            toast.error(error?.data?.message || 'Error creating location')
+        }
+    }
+
+    const handleDelete = (id: string) => {
+        confirmDialog({
+            message: 'Are you sure you want to delete this location? All stock in this location will be removed.',
+            header: 'Confirm Delete',
+            icon: 'pi pi-exclamation-triangle',
+            accept: async () => {
+                try {
+                    const res: any = await deleteLocation(id).unwrap()
+                    toast.success(res.msg)
+                } catch (error: any) {
+                    toast.error(error?.data?.message || 'Error deleting location')
+                }
+            }
+        })
+    }
+
+    const actionTemplate = (rowData: any) => (
+        <div className="flex gap-2">
+            <Button icon="pi pi-trash" severity="danger" size="small" rounded text
+                onClick={() => handleDelete(rowData._id)} tooltip="Delete" />
+        </div>
+    )
+
+    if (!warehouseId) {
+        return (
+            <div className="p-4">
+                <BredCrums PageName="Locations" PageLink="/locations" />
+                <div className="mt-8 text-center text-gray-500">
+                    <p className="text-lg">Please select a warehouse first.</p>
+                    <p className="text-sm mt-2">Go to Warehouses page and click on the locations icon.</p>
+                </div>
+            </div>
+        )
+    }
+
+    return (
+        <div className="p-4">
+            <BredCrums PageName={`Locations — ${warehouseName}`} PageLink="/locations" />
+            <ConfirmDialog />
+
+            <div className="flex items-center justify-between mb-4 mt-4">
+                <div>
+                    <h3 className="text-lg font-semibold text-gray-700">
+                        Rack / Bin locations in <span className="text-blue-600">{warehouseName}</span>
+                    </h3>
+                </div>
+                <Button label="Add Location" icon="pi pi-plus" onClick={() => setShowDialog(true)} />
+            </div>
+
+            <DataTable value={data?.locations || []} loading={isLoading} stripedRows
+                emptyMessage="No locations found" className="shadow-sm">
+                <Column field="rack" header="Rack" sortable />
+                <Column field="bin" header="Bin" sortable />
+                <Column header="Status" body={(row: any) => (
+                    <span className={`px-2 py-1 rounded-full text-xs font-medium ${row.isActive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}`}>
+                        {row.isActive ? 'Active' : 'Inactive'}
+                    </span>
+                )} />
+                <Column header="Actions" body={actionTemplate} />
+            </DataTable>
+
+            <Dialog header="Create Storage Location" visible={showDialog} onHide={() => setShowDialog(false)}
+                style={{ width: '400px' }} modal>
+                <div className="flex flex-col gap-3 mt-2">
+                    <div>
+                        <label className="block text-sm font-medium mb-1">Rack *</label>
+                        <InputText value={form.rack} onChange={(e) => setForm({ ...form, rack: e.target.value })}
+                            className="w-full" placeholder="e.g. R1, A-01" />
+                    </div>
+                    <div>
+                        <label className="block text-sm font-medium mb-1">Bin *</label>
+                        <InputText value={form.bin} onChange={(e) => setForm({ ...form, bin: e.target.value })}
+                            className="w-full" placeholder="e.g. B1, 01-A" />
+                    </div>
+                    <Button label="Create" icon="pi pi-check" onClick={handleCreate} loading={creating}
+                        className="mt-2" />
+                </div>
+            </Dialog>
+        </div>
+    )
+}
+
+export default LocationsPage
