+import { useState } from 'react'
+import { useGetActivityLogsQuery } from '../../provider/queries/ActivityLog.query'
+import BredCrums from '../../components/BredCrums'
+import { DataTable } from 'primereact/datatable'
+import { Column } from 'primereact/column'
+import { Dropdown } from 'primereact/dropdown'
+import { Button } from 'primereact/button'
+import { Tag } from 'primereact/tag'
+
+const ActivityLogPage = () => {
+    const [page, setPage] = useState(1)
+    const [entity, setEntity] = useState('')
+
+    const { data, isLoading } = useGetActivityLogsQuery({ page, entity })
+
+    const entityOptions = [
+        { label: 'All Entities', value: '' },
+        { label: 'Product', value: 'Product' },
+        { label: 'Warehouse', value: 'Warehouse' },
+        { label: 'Shipment', value: 'Shipment' },
+        { label: 'StockLocation', value: 'StockLocation' },
+        { label: 'User', value: 'User' }
+    ]
+
+    const entityTagColors: Record<string, string> = {
+        'Product': 'info',
+        'Warehouse': 'success',
+        'Shipment': 'warning',
+        'StockLocation': 'danger',
+        'User': 'help'
+    }
+
+    const dateTemplate = (row: any) => {
+        const d = new Date(row.createdAt)
+        return d.toLocaleString('en-IN', {
+            day: '2-digit', month: 'short', year: 'numeric',
+            hour: '2-digit', minute: '2-digit'
+        })
+    }
+
+    const entityTemplate = (row: any) => (
+        <Tag value={row.entity} severity={entityTagColors[row.entity] as any || 'info'} className="text-xs" />
+    )
+
+    const userTemplate = (row: any) => (
+        <div>
+            <div className="font-medium">{row.performedBy?.name || 'System'}</div>
+            <div className="text-xs text-gray-400">{row.performedBy?.email || ''}</div>
+        </div>
+    )
+
+    return (
+        <div className="p-4">
+            <BredCrums PageName="Activity Logs" PageLink="/activity-logs" />
+
+            <div className="flex items-center justify-between mb-4 mt-4 flex-wrap gap-2">
+                <div className="flex items-center gap-2">
+                    <Dropdown value={entity} options={entityOptions}
+                        onChange={(e) => { setEntity(e.value); setPage(1) }}
+                        className="w-48" />
+                    {data?.total !== undefined && (
+                        <span className="text-sm text-gray-500">{data.total} entries</span>
+                    )}
+                </div>
+            </div>
+
+            <DataTable value={data?.logs || []} loading={isLoading} stripedRows
+                emptyMessage="No activity logs found" className="shadow-sm">
+                <Column header="When" body={dateTemplate} sortable field="createdAt" style={{ width: '160px' }} />
+                <Column field="action" header="Action" sortable />
+                <Column header="Entity" body={entityTemplate} style={{ width: '140px' }} />
+                <Column field="details" header="Details" />
+                <Column header="By" body={userTemplate} style={{ width: '180px' }} />
+            </DataTable>
+
+            <div className="flex justify-between mt-4">
+                <Button label="Previous" disabled={page <= 1} onClick={() => setPage(p => p - 1)} size="small" outlined />
+                <span className="text-sm text-gray-500">Page {page}</span>
+                <Button label="Next" disabled={!data?.more} onClick={() => setPage(p => p + 1)} size="small" outlined />
+            </div>
+        </div>
+    )
+}
